<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xkik_material_background"
    tools:context="com.xkikdev.xkik.config_activities.TechnicalFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recptcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        card_view:cardBackgroundColor="@color/xkik_material_card">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/dmode_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/technical_settings"
                android:textAlignment="center"
                android:textColor="@color/xkik_material_text"
                android:textSize="18sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/devmode_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/dmode_title"
                android:layout_marginTop="11dp"
                android:text="@string/enable_dev_mode"
                android:textColor="@color/xkik_material_text" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
