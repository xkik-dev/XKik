<resources>

    <style name="xkik_drawer" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/xkik_material_grey</item>
        <item name="colorPrimaryDark">@color/xkik_material_grey</item>
        <item name="colorAccent">@color/nliveo_red_colorPrimaryDark</item>
    </style>

    <style name="xkik_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/xkik_material_grey</item>
        <item name="colorPrimaryDark">@color/xkik_material_grey</item>
        <item name="colorAccent">@color/nliveo_red_colorPrimaryDark</item>
    </style>

    <style name="CompoundButtonTheme" parent="@style/xkik_Theme">
        <item name="android:textColorSecondary">@color/xkik_secondary_text</item>
    </style>

    <style name="KikSwitchStyle" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="theme">@style/CompoundButtonTheme</item>
    </style>

    <style name="invisible">
        <item name="android:visibility">gone</item>
    </style>

    <style name="KikSwitchStyle.List" parent="@style/KikSwitchStyle">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>
</resources>
